{
  "name": "@mysticatea/fs-watcher",
  "version": "0.1.0",
  "description": "Lightweight file system watchers.",
  "main": "index.js",
  "files": [
    "index.*"
  ],
  "engines": {
    "node": ">=6.5.0"
  },
  "dependencies": {
    "debounce": "^1.2.0",
    "debug": "^3.1.0",
    "glob-parent": "^3.1.0",
    "micromatch": "^3.1.10"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-rc.2",
    "@babel/preset-env": "^7.0.0-rc.2",
    "@mysticatea/eslint-plugin": "^5.1.0",
    "@types/debounce": "^1.0.0",
    "@types/debug": "0.0.30",
    "@types/fs-extra": "^5.0.4",
    "@types/glob-parent": "^3.1.0",
    "@types/micromatch": "^3.1.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.1",
    "coveralls": "^3.0.2",
    "dts-bundle": "^0.7.3",
    "eslint": "^5.4.0",
    "fs-extra": "^7.0.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "opener": "^1.5.1",
    "p-event": "^2.1.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.64.1",
    "rollup-plugin-babel": "^4.0.0-beta.8",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-watch": "^4.3.1",
    "ts-node": "^7.0.1",
    "typescript": "^2.9.2",
    "warun": "^1.0.0"
  },
  "scripts": {
    "prebuild": "npm run -s clean",
    "build": "tsc --module es2015 --target es2018 && rollup -c && dts-bundle --name @mysticatea/fs-watcher --main .temp/src/index.d.ts --out ../../index.d.ts",
    "clean": "rimraf .temp index.*",
    "coverage": "nyc report --reporter lcov && opener coverage/lcov-report/index.html",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "test": "eslint src test --ext .ts && tsc --noEmit && nyc --reporter lcov -- _mocha \"test/*.ts\" --reporter dot --timeout 8000",
    "preversion": "npm test",
    "version": "npm run -s build",
    "postversion": "git push && git push --tags",
    "prewatch": "npm run -s clean",
    "watch": "warun \"{src,test}/**/*.ts\" -- npm run -s test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mysticatea/fs-watcher.git"
  },
  "keywords": [],
  "author": "Toru Nagashima (https://github.com/mysticatea)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mysticatea/fs-watcher/issues"
  },
  "homepage": "https://github.com/mysticatea/fs-watcher#readme"
}
